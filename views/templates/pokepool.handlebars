<template id="card-template">
    <div class="row">
        <div class="col s8">
            {{#each pokes}}
            <div class="col s3">
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                        <img class="activator" src="https://cdn.bulbagarden.net/upload/4/43/043O/oddish.png">
                    </div>
                    <div class="card-content">
                        <span class="card-title activator grey-text text-darken-4">pokes<i class="material-icons right">more_vert</i></span>
                        <p><a href="#">Draft to team</a></p>
                    </div>
                    <div class="card-reveal">
                        <span class="card-title grey-text text-darken-4">pokes<i class="material-icons right">close</i></span>
                        <p>Here is some more information about this pokemon.</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</template>
